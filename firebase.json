{
  "database": {
    "rules": "database.rules.json"
  },
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ]
  },
  "storage": {
    "rules": "storage.rules"
  },
  "public": "docs",
  "rewrites" : [
    {
      "source" : "**",
      "destination" : "/index.html"
    }
  ]
}
